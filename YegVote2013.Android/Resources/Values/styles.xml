<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- Text -->
	<style name="TextAppearance" parent="@android:style/TextAppearance">
		<item name="android:textSize">16dip</item>
		<item name="android:textColorLink">#e00</item>
	</style>
	<style name="TextAppearance.WindowTitle">
		<item name="android:textSize">18dip</item>
		<item name="android:textColor">#fff</item>
		<item name="android:textStyle">bold</item>
	</style>
	<!-- Window -->
	<style name="WindowTitleBackground">
		<item name="android:background">
      @drawable/window_title_background
    </item>
	</style>
	<style name="WindowTitle">
		<item name="android:singleLine">true</item>
		<item name="android:textAppearance">
      @style/TextAppearance.WindowTitle
    </item>
		<item name="android:shadowColor">#b000</item>
		<item name="android:shadowRadius">2.75</item>
	</style>
	<style name="Widget.ListView" parent="android:Widget.ListView">
		<item name="android:listSelector">
      @drawable/list_selector_background
    </item>
		<item name="android:cacheColorHint">
      @color/color_foreground
    </item>
		<item name="android:divider">
      @drawable/list_item_divider
    </item>
		<item name="android:dividerHeight">1dp</item>
	</style>
	<!-- Custom -->
	<style name="company_name" parent="@android:style/TextAppearance.Small">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#333</item>
		<item name="android:textSize">14dip</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="company_address" parent="@android:style/TextAppearance.Small">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#666</item>
		<item name="android:textSize">12dip</item>
	</style>
	<style name="company_summary" parent="@android:style/TextAppearance.Small">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#666</item>
		<item name="android:textSize">12dip</item>
		<item name="android:textStyle">italic</item>
	</style>
	<style name="no_company_data" parent="@android:style/TextAppearance.Small">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#666</item>
		<item name="android:textSize">16dip</item>
	</style>
	<style name="summary" parent="@android:style/TextAppearance.Small">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#666</item>
		<item name="android:textSize">16dip</item>
	</style>
</resources>